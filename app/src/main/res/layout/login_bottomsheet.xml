<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin16"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bsTvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to Paytm"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bsTvLoginInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number registered with Paytm"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin12"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bsTvLogin"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bsEditPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin61"
        app:boxBackgroundColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsTvLoginInfo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bsEditPhoneIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:hint="@string/phone"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/bsTvForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/azure"
        android:textSize="12sp"
        android:text="Forgot Password/ Login Issues"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsEditPhone"/>

    <TextView
        android:id="@+id/bsBtnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lbl_btn_proceed"
        android:paddingTop="18dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:background="@color/azure"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsTvForgot"
        />


</androidx.constraintlayout.widget.ConstraintLayout>