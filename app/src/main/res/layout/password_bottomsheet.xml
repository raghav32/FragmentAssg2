<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin16"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bsTvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to Paytm"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bsTvLoginInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password for Paytm account registered with 9953755955"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin12"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bsTvLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bsEditPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin61"
        app:boxBackgroundColor="@color/grey"
        app:passwordToggleEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsTvLoginInfo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bsEditPassIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:hint="Enter your Password"
            android:maxLength="10"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/bsTvForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/azure"
        android:textSize="12sp"
        android:text="Forgot Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsEditPass"/>

    <TextView
        android:id="@+id/bsBtnPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login Securely"
        android:paddingTop="18dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:background="@color/azure"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsTvForgot"
        />

    <TextView
        android:id="@+id/bsTvAnother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/azure"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Login to another account"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsBtnPass"/>

</androidx.constraintlayout.widget.ConstraintLayout>