<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin20"
    android:background="@color/white">

<TextView
    android:id="@+id/tvOtpSent"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:textSize="@dimen/text20"
    android:textAlignment="center"
    android:text="@string/otpSent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin50"
        android:text="@string/enterOTP"
        android:textColor="@color/black"
        android:textSize="@dimen/text30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOtpSent" />

    <TextView
        android:id="@+id/tvVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvOTP"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin7"
        android:textSize="@dimen/text12"
        android:textColor="@color/black"
        android:text="@string/lbl_enter_otp_sent_to"
        />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editOTP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin61"
        app:boxBackgroundColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/tvOTP">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enterOTP"
            android:inputType="number"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:text="@string/otpTime"
        android:layout_marginTop="@dimen/margin16"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editOTP"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="@dimen/margin40"
        android:layout_marginTop="@dimen/margin40"
        android:background="@color/azure"
        android:textColor="@color/black"
        android:text="@string/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>